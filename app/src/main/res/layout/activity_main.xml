<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/myBackround"
    tools:context=".MainActivity">
<ScrollView
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>
    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sliderView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true" />
    <GridLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.5"
        android:rowCount="5"
        android:columnCount="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/shop"
            style="@style/myDashboard"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/shop_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="Shop"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/orders"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            style="@style/myDashboard"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/orders_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="My Orders"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/manageOrders"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            style="@style/myDashboard"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/orders_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="Manage Orders"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/commissions"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            style="@style/myDashboard"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/commision_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="My Commision"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/account"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            style="@style/myDashboard"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/account_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="My Account"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/new_item"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            style="@style/myDashboard"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="63dp"
                    android:src="@drawable/new_item_logo" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="Add Item"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/manage_items"
            android:layout_margin="5dp"
            style="@style/myDashboard"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/shop_logo_two"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="Manage Items"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/logout"
            android:layout_margin="5dp"
            style="@style/myDashboard"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/logout_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/change_password"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            style="@style/myDashboard"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/password_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/manage_users"
            android:layout_margin="5dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10sp"
            android:layout_rowWeight="1"
            style="@style/myDashboard"
            android:layout_columnWeight="1">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@drawable/users_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    style="@style/myText3"
                    android:text="Manage Users"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>
</LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>