<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginillust2"
    tools:context=".Login">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin_layout"
        android:background="@drawable/shape_topleftrightcirle_gradientblue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/myText1"
            android:text="Login"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/id"/>
        <EditText
            android:paddingLeft="12dp"
            android:autoSizeTextType="uniform"
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/myEdittext"
            android:hint="enter you email/mobile"
            android:textSize="15sp"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/password"
            app:layout_constraintWidth_percent=".80"
            />

        <EditText
            android:paddingLeft="12dp"
            android:inputType="textPassword"
            android:autoSizeTextType="uniform"
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/myEdittext"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/sign_in"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id"
            android:hint="enter you password"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintWidth_percent=".80" />


        <CheckBox
            android:textSize="13sp"
            style="@style/myText4"
            android:textStyle="bold"
            android:text="Remember Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remember_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:textStyle="bold"
            style="@style/myText4"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:textAllCaps="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password"/>

        <Button
            android:id="@+id/sign_in"
            style="@style/myButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_corner50dp"
            android:elevation="20dp"
            android:text="Sign In"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password"
            app:layout_constraintWidth_percent="0.80" />
        <Button
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="invoice"
            android:id="@+id/invoice"
            style="@style/myButton"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>