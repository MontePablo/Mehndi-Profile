<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/myBackround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProfile">
    <ScrollView
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:src="@drawable/profile_illust"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="full name *"/>
            <EditText
                android:layout_margin="10dp"
                style="@style/myEdittext"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mobile number *"/>
            <EditText
                android:layout_margin="10dp"
                style="@style/myEdittext"
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email"/>
            <EditText
                android:layout_margin="10dp"
                style="@style/myEdittext"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="address"/>
            <EditText
                android:layout_margin="10dp"
                style="@style/myEdittext"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="account type"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_account_type"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent account"/>

            <TextView
                style="@style/myEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_user_text"
                android:hint="Select parent to link with"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/arrow_down_logo"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/myButton"
                android:text="Create"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:id="@+id/create"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>