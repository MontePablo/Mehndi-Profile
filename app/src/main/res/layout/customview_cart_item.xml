<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cart_root"
    style="@style/myDashboard"
    android:elevation="15dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:id="@+id/lyout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cart_image"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_margin="5dp"
                style="@style/myText4"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red velvet pallet"
                android:id="@+id/cart_name"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cart_code"
                    style="@style/myText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDK-2037"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs"/>
                <TextView
                    android:id="@+id/cart_price"
                    android:textStyle="bold"
                    style="@style/myText3"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="230"/>
                <ImageButton
                    style="@style/myButton"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/baseline_remove_circle_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/cart_decrease"/>
                <TextView
                    android:textSize="15sp"
                    style="@style/myText4"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_quantity"
                    android:text="1"/>
                <ImageButton
                    style="@style/myButton"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/baseline_add_circle_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/cart_increase"/>

                <ImageButton
                    android:id="@+id/cart_remove"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/baseline_delete_forever_24" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>